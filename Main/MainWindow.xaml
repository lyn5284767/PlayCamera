            </ListBox>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid Name="MainPanel" Grid.Row="0"></Grid>
                <Border Grid.Row="1" BorderBrush="#686868" BorderThickness="1,1,0,0">
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Grid Background="LightBlue" Name="gdFour" Margin="10,0,10,0">
                            <Image Source="/Images/Four.png" MouseLeftButtonDown="FourImage_MouseLeftButtonDown"/>
                        </Grid>
                        <Grid Name="gdNine" Margin="10,0,10,0">
                            <Image Source="/Images/Nine.png" MouseLeftButtonDown="NineImage_MouseLeftButtonDown"/>
